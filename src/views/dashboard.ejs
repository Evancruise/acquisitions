<h2><%= t("dashboard.content_1") %>, <%= name %></h2>

<div class="container mt-4">
  <div class="row g-3">
    <!-- 📸 立即檢測 -->
    <div class="col-6 col-md-4 col-lg-3">
      <div class="card dashboard-card">
        <div class="card-body text-center">
          <i class="fa-solid fa-camera-retro fa-2x text-primary mb-2"></i>
          <h6 class="card-title">📸 <%= t("dashboard.scan_now") %></h6>
          <a href="/scan" class="stretched-link"></a>
        </div>
      </div>
    </div>

    <!-- 📝 我的檢測紀錄 -->
    <div class="col-6 col-md-4 col-lg-3">
      <div class="card dashboard-card">
        <div class="card-body text-center">
          <i class="fa-solid fa-file-medical fa-2x text-success mb-2"></i>
          <h6 class="card-title">📝 <%= t("record.title") %></h6>
          <a href="/records" class="stretched-link"></a>
        </div>
      </div>
    </div>

    <!-- 📅 回診提醒 -->
    <div class="col-6 col-md-4 col-lg-3">
      <div class="card dashboard-card">
        <div class="card-body text-center">
          <i class="fa-solid fa-calendar-check fa-2x text-warning mb-2"></i>
          <h6 class="card-title">📅 <%= t("reminder.title") %></h6>
          <a href="/reminder" class="stretched-link"></a>
        </div>
      </div>
    </div>

    <!-- 📊 健康追蹤 -->
    <div class="col-6 col-md-4 col-lg-3">
      <div class="card dashboard-card">
        <div class="card-body text-center">
          <i class="fa-solid fa-heart-pulse fa-2x text-danger mb-2"></i>
          <h6 class="card-title">📊 <%= t("tracking.title") %></h6>
          <a href="/tracking" class="stretched-link"></a>
        </div>
      </div>
    </div>

    <!-- 🎥 口腔衛教 -->
    <div class="col-6 col-md-4 col-lg-3">
      <div class="card dashboard-card">
        <div class="card-body text-center">
          <i class="fa-solid fa-graduation-cap fa-2x text-info mb-2"></i>
          <h6 class="card-title">🎥 <%= t("education.title") %></h6>
          <a href="/education" class="stretched-link"></a>
        </div>
      </div>
    </div>
  </div>
</div>