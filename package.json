{
  "name": "acquisitions",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "imports": {
    "#src/*": "./src/*",
    "#config/*": "./src/config/*",
    "#tests/*": "./src/tests/*",
    "#controllers/*": "./src/controllers/*",
    "#middleware/*": "./src/middleware/*",
    "#models/*": "./src/models/*",
    "#routes/*": "./src/routes/*",
    "#services/*": "./src/services/*",
    "#utils/*": "./src/utils/*",
    "#validations/*": "./src/validations/*"
  },
  "scripts": {
    "dev": "node --watch src/index.js",
    "dev:docker": "node scripts/dev.js",
    "prod:docker": "node scripts/prod.js",
    "node": "node src/index.js",
    "check-logger": "node src/check-logger.js",
    "start": "node index.js",
    "db:push": "drizzle-kit push",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write",
    "format:check": "prettier --check .",
    "db:generate": "drizzle-kit migrate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "docker:dev": "docker-compose -f docker-compose.dev.yml --env-file .env.development up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down -v",
    "docker:prod": "docker-compose -f docker-compose.prod.yml --env-file .env.production up --build -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:build:dev": "docker-compose -f docker-compose.dev.yml build",
    "docker:build:prod": "docker-compose -f docker-compose.prod.yml build",
    "docker:logs:dev": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:logs:prod": "docker-compose -f docker-compose.prod.yml logs -f",
    "test": "set NODE_OPTIONS=--experimental-vm-modules && jest"
  },
  "dependencies": {
    "@arcjet/inspect": "^1.0.0-beta.11",
    "@arcjet/node": "^1.0.0-beta.11",
    "@neondatabase/serverless": "^1.0.1",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.31.4",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "winston": "^3.17.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@sendgrid/mail": "^8.1.6",
    "body-parser": "^2.2.0",
    "bootstrap": "^5.3.8",
    "drizzle-kit": "^0.31.0",
    "ejs": "^3.1.10",
    "exceljs": "^4.4.0",
    "express-ejs-layouts": "^2.5.1",
    "express-validator": "^7.2.1",
    "jest": "^29.7.0",
    "mocha": "^11.7.2",
    "multer": "^2.0.2",
    "qrcode": "^1.5.4",
    "supertest": "^7.1.4"
  }
}
